<!DOCTYPE html>
<html lang="zxx">
    <%- include('../partials/head.ejs', {title}) %>


<body>
    <!-- Page Preloder -->
  <%- include('../partials/loader.ejs', {}) %>
   
    

    <%- include('../partials/header.ejs', {}) %>
    <!-- Header End -->

    <!-- Breadcrumb Section Begin -->
    <div class="breacrumb-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb-text">
                        <a href="/"><i class="fa fa-home"></i> Home</a>
                        <span>Register</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Breadcrumb Form Section Begin -->

    <!-- Register Section Begin -->
    <div class="register-login-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 offset-lg-3">
                    <div class="register-form">
                        <h2>Register</h2>
                        <form action="/register/members" method="POST">
                            <div class="group-input">
                                <label for="firstname">Firstname *</label>
                                <input type="text" id="username" name="firstname" required> 
                            </div>
                            <div class="group-input">
                                <label for="lastname">Lastname *</label>
                                <input type="text" id="username" name="lastname" required>
                            </div>
                            <div class="group-input">
                                <label for="email">Email *</label>
                                <input type="email" id="email" name="email" required>
                            </div>
                            <div class="group-input">
                                <label for="phonenum">Phone Number *</label>
                                <input type="text" id="username" name="phone" required>
                            </div>
                            <div class="group-input">
                                <label for="pass">Password *</label>
                                <input type="password" id="pass" name="password" required>
                            </div>
                            <span id="passmatch" class="passmatch"> Password not match </span>
                            <div class="group-input">
                                <label for="con-pass">Confirm Password *</label>
                                <input type="password" id="con-pass">
                            </div>
                            <button type="submit" id="submit" class="site-btn register-btn" disabled >REGISTER</button>
                        </form>
                        <div class="switch-login">
                            <a href="/login" class="or-login">Or Login</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    


    <!-- Footer Section Begin -->
    
    <%- include('../partials/footer.ejs', {}) %>
    <!-- Footer Section End -->

    <!-- Js Plugins -->
   <script>
       const emailField = document.getElementById('email');
       const submitButton = document.getElementById('submit');
       const ConfirmPass = document.getElementById('con-pass');
       const password = document.getElementById('pass')
       const passNotMatch = document.getElementById('passmatch')

       emailField.addEventListener('keyup', (e)=> {
           isValid = emailField.checkValidity()

           if(isValid) {
               submitButton.disabled = false;
           } else{
               submitButton.disabled = true
           }
       })

       ConfirmPass.addEventListener('keyup', (e)=> {
           isValid = password.value === ConfirmPass.value

           if(isValid) {
            passNotMatch.style.display = 'none'
               submitButton.disabled = false
           } else {
            passNotMatch.style.display = 'block'
            passNotMatch.style.color = 'red'
               submitButton.disabled = true
           }
       })
   
   </script>
    <%- include('../partials/script.ejs', {}) %>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <script>
        if('<%-message%>'){
            swal({
                icon: 'error',
                text: '<%= message%>'
            })
        }
    </script>
</body>

</html>