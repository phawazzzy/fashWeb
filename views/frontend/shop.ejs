<!DOCTYPE html>
<html>
<%- include('../partials/head.ejs', {}) %>

<body>
    <%#- include('../partials/loader.ejs', {}) %>
    <!-- header -->
    <%- include('../partials/header.ejs', {}) %>
    <!-- /header -->

    <!-- Breadcrumb Section Begin -->
    <%#- include('../partials/breadCrumbs.ejs', { pageName }) %>

    <!-- Breadcrumb Section Begin -->

    <!-- product shop Section Begin -->

    <section class="product-shop spad">
        <div class="container">
            <div class="row">
                <!-- side filter bar begin-->
               <%- include('../partials/sidebarFilter.ejs', {}) %>
                <!-- /side filter bar end -->
                <!-- main product showcase begin-->
                <div class="col-lg-9 order-1 order-lg-2">
                    <!-- show product option -->
                    <div class="product-show-option">
                        <div class="row">
                            <div class="col-lg-7 col-md-7">
                                <div class="select-option">
                                    <select class="sorting">
                                        <option value="">Default Sorting</option>
                                    </select>
                                    <select class="p-show">
                                        <option value="">Show:</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-5 col-md-5 text-right">
                                <p>Show 01- 09 Of 36 Product</p>
                            </div>
                        </div>
                    </div>
                    <!-- show product option ends -->

                    <!-- product list begins -->
                    <div class="product-list">
                        <div class="row">
                            <% if (result.length > 0) { %>
                                <%for (var i = result.length - 1; i >= 0; --i) { %>

                                    <div class="col-lg-4 col-sm-6">
                                        <%- include('../component/productCard.ejs', {data: result[i]}) %>
                                    </div>
                                    <%} %>
                            <% } else { %>
                                <div class="col-lg-4 col-sm-6">
                                    <h1> Nothing was found here</h1>
                                </div>
                           <% } %>
                            

                        </div>
                    </div>
                    <!-- product list ends -->
                    <!-- loading starts -->
                    <!-- <div class="loading-more">
                        <i class="icon_loading"></i>
                        <a href="#">
                            Loading More
                        </a>
                    </div> -->
                    <!-- loading ends -->
                </div>
                <!-- /main product showcase begin-->
            </div>
        </div>
    </section>

    <!-- /product shop section ends -->

    <%- include('../partials/footer.ejs', {}) %>
    <%- include('../partials/script.ejs', {}) %>
</body>

</html>